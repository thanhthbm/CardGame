<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox fx:id="alertBox" alignment="CENTER" spacing="20"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.thanhthbm.cardgame.controller.AlertController"
      styleClass="alert-box">

    <padding>
        <Insets top="25" right="30" bottom="25" left="30" />
    </padding>

    <Label fx:id="titleLabel" styleClass="alert-title" text="Tiêu đề" />

    <Label fx:id="messageLabel" styleClass="alert-message" wrapText="true" text="Đây là nội dung thông báo..." />

    <Button fx:id="okButton" text="OK" styleClass="alert-button" onAction="#handleClose" />

</VBox>