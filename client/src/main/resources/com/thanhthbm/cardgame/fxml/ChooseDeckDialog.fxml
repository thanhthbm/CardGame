<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox fx:id="alertBox" alignment="CENTER" spacing="25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.thanhthbm.cardgame.controller.ChooseDeckDialogController"
      styleClass="alert-box">

    <padding>
        <Insets top="25" right="30" bottom="25" left="30" />
    </padding>

    <Label fx:id="titleLabel" styleClass="alert-title" text="Thách đấu" />

    <Label fx:id="messageLabel" styleClass="alert-message" wrapText="true" text="Chọn loại bộ bài để thách đấu:" />

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="fullButton" text="52 lá (Full)" styleClass="alert-button" onAction="#handleFull" />
        <Button fx:id="shortButton" text="36 lá (Short)" styleClass="alert-button" onAction="#handleShort" />
        <Button fx:id="cancelButton" text="Hủy" styleClass="cancel-button" onAction="#handleCancel" />
    </HBox>

</VBox>