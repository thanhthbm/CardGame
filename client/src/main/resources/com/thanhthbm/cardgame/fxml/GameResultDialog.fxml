<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox fx:id="resultBox" alignment="CENTER" spacing="20"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.thanhthbm.cardgame.controller.GameResultDialogController"
      styleClass="result-dialog">

    <padding>
        <Insets top="25" right="40" bottom="30" left="40" />
    </padding>

    <Label fx:id="titleLabel" text="KẾT QUẢ" />

    <HBox alignment="CENTER" spacing="30">

        <VBox alignment="CENTER" spacing="10" styleClass="player-box">
            <Label fx:id="player1NameLabel" text="Player 1" styleClass="player-name" />
            <Label fx:id="player1ScoreLabel" text="0" styleClass="player-score" />
            <Label text="Bài trên tay:" />
            <Label fx:id="player1HandLabel" text="[Bài]" styleClass="player-hand" wrapText="true" />
        </VBox>

        <VBox alignment="CENTER" spacing="10" styleClass="player-box">
            <Label fx:id="player2NameLabel" text="Player 2" styleClass="player-name" />
            <Label fx:id="player2ScoreLabel" text="0" styleClass="player-score" />
            <Label text="Bài trên tay:" />
            <Label fx:id="player2HandLabel" text="[Bài]" styleClass="player-hand" wrapText="true" />
        </VBox>

    </HBox>

    <Button fx:id="okButton" text="Về Sảnh" styleClass="alert-button" onAction="#handleClose" />

</VBox>