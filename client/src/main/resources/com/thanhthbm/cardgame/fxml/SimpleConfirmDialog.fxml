<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox fx:id="alertBox" alignment="CENTER" spacing="25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.thanhthbm.cardgame.controller.SimpleConfirmDialogController"
      styleClass="alert-box">

    <padding>
        <Insets top="25" right="30" bottom="25" left="30" />
    </padding>

    <Label fx:id="titleLabel" styleClass="alert-title" text="Tiêu đề" />

    <Label fx:id="messageLabel" styleClass="alert-message" wrapText="true" text="Đây là nội dung thông báo..." />

    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="confirmButton" text="Xác nhận" styleClass="alert-button" onAction="#handleConfirm" />
        <Button fx:id="cancelButton" text="Hủy" styleClass="cancel-button" onAction="#handleCancel" />
    </HBox>

</VBox>